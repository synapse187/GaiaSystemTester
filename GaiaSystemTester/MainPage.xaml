<Page
    x:Class="GaiaSystemTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:GaiaSystemTester"
    mc:Ignorable="d"
    >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>
        <Grid Background="LightGray" HorizontalAlignment="Left" Width="1900">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265"/>
                <ColumnDefinition Width="265"/>
                <ColumnDefinition Width="265"/>
                <ColumnDefinition Width="265"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <!--Add Character-->
            <StackPanel>
                <TextBlock Text="ADD CHARACTER!"/>
                <Button Click="AddCharacter"  Content="Add Character"/>
                <TextBox x:Name="CharacterToAddNameTextBox" Header="Character Name" Text="Character 01"/>
                <TextBlock Text="Remove Selected Character"/>
                <Button Click="Remove_Character_Button_Click" Content="Remove Selected"/>
                <Button Click="Reset_Character_Button_Click" Content="Reset Selected"/>
            </StackPanel>
            <!--Add Character-->
            <ListView x:Name="CharactersListView" Grid.Column="1" IsItemClickEnabled="True" SelectionMode="Single" ItemsSource="{x:Bind Path=CharacterSheets, Mode=OneWay}" SelectionChanged="CharactersListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:CharacterSheet">
                        <TextBlock Text="{x:Bind Bio.Name, Mode=OneWay}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--Sim Settings-->
            <StackPanel Grid.Column="0" Width="250" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="TextBoxSteps" Text="Number of Steps:"/>
                    <muxc:NumberBox x:Name="SimStepsNumberBox" Value="{x:Bind SimSettings.NumberOfSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SimSettingsNumberBox}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock x:Name="TextBoxIter" Text="Number of Itterations:"/>
                    <muxc:NumberBox x:Name="SimIterNumberBox" Value="{x:Bind SimSettings.NumberOfIterations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SimSettingsNumberBox}"/>
                </StackPanel>
                <ComboBox x:Name="SimTypeComboBox" SelectedIndex="{x:Bind Path=SimSettings.SimulationType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem ToolTipService.ToolTip="Simple Simulation for testing rolls.">Quick</ComboBoxItem>
                    <ComboBoxItem ToolTipService.ToolTip="Static combat with two characters one attacking one defending.">Quick Combat</ComboBoxItem>
                    <ComboBoxItem ToolTipService.ToolTip="Static combat with two characters both attacking and defending to the death.">Combat</ComboBoxItem>
                    <ComboBoxItem ToolTipService.ToolTip="Dynamic combat with two characters choosing attacks and defences to the death.">Full Combat</ComboBoxItem>
                </ComboBox>
                <CheckBox  IsChecked="{x:Bind Path=SimSettings.OutputStep, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Output Steps</CheckBox>
                <CheckBox  IsChecked="{x:Bind Path=SimSettings.OutputIter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Output Iterations</CheckBox>
                <CheckBox  IsChecked="{x:Bind Path=SimSettings.OutputRoll, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Output Rolls</CheckBox>
                <Button Content="Run Simulation" Click="RunSim"/>
            </StackPanel>
            <!--END Sim Settings-->
            <!--Player Block-->
            <ContentControl x:Name="PlayerStatsPannelContentControl" Grid.Column="2" IsEnabled="True">
                <StackPanel x:Name="PlayerStatsStackPanel" Width="255" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,5,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Character Stat Type: " VerticalAlignment="Center"/>
                        <ToggleSwitch Toggled="StatsSelectToggleSwitch_Toggled" IsOn="{x:Bind Path=SelectedCharacter.CurentCharacter.StatsToUse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" OnContent="Standard" OffContent="Quick"/>
                    </StackPanel>
                    <!--Information Block-->
                    <TextBox Header="Character Name:" TextAlignment="Center" Text="{x:Bind Path=SelectedCharacter.CurentCharacter.Bio.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <!--END Information Block-->
                    <!--Standard Stats Panel-->
                    <StackPanel x:Name="P1StandardStatsPanel" Visibility="Visible">
                        <!--Secondary Stats-->
                        <StackPanel >
                            <TextBlock Text="Secondary Stats"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="123"/>
                                    <ColumnDefinition Width="123"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>
                                <!--Health-->
                                <!--Hits-->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <TextBlock Text="Hits:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                        <muxc:NumberBox  Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Health.Hits, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Hits-->
                                <!--Endurance-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <TextBlock Text="Endurance:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                        <muxc:NumberBox  Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Health.Endurance, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Hits-->
                                <!--Initative-->
                                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <TextBlock Text="Initative:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                        <muxc:NumberBox  Value="{x:Bind Path=SelectedCharacter.CurentCharacter.AttributesOther.Initiative, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Initative-->
                                <!--Speed-->
                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <TextBlock Text="Speed: m/s" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                        <muxc:NumberBox  Value="{x:Bind Path=SelectedCharacter.CurentCharacter.AttributesOther.Move, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Speed-->
                                <!--END Health-->
                            </Grid>
                        </StackPanel>
                        <!--END Secondary Stats-->
                        <!--Physical Grid-->
                        <StackPanel BorderBrush="Black" BorderThickness="1">
                            <TextBlock Text="Physical Stats:" Style="{StaticResource StandardStatHeadderTextBlock}"/>
                            <Grid Width="250" Height="auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>
                                <!--IconLayout-->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline01}"/>
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline02}"/>
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline01}"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto" Height="110">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline03}" />
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline04}" />
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline02}"/>
                                    </Canvas>
                                </StackPanel>
                                <!--END Icon Layout-->
                                <!--Pool-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource PoolStackPannel}">
                                    <TextBlock Text="Physical&#x0a;Pool" Style="{StaticResource PoolNameTextBlock}" />
                                    <muxc:NumberBox Tag="PhysicalPool" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.PhysicalPool, Mode=OneWay}" Style="{StaticResource PoolNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Pool-->
                                <!--Super Stat 01-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Body:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Body" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Body, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 01-->
                                <!--Sub Stat 01-->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepStrength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Strength:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusStrength, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Strength" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Strength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 01-->
                                <!--Sub Stat 02-->
                                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepToughness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Toughness:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusToughness, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Toughness" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Toughness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 02-->
                                <!--Super Stat 02-->
                                <StackPanel Grid.Column="1" Grid.Row="2 " Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Agility:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Agility" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Agility, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 02-->
                                <!--Sub Stat 03-->
                                <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepReflexes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Reflexes:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusReflexes, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Reflexes" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Reflexes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 03-->
                                <!--Coordination-->
                                <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepCoordination, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Coordination:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusCoordination, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Coordination" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Coordination, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Coordination-->
                                <!--END Sub Stats 02-->
                            </Grid>
                        </StackPanel>
                        <!--END Physical Grid-->
                        <!--Mental Grid-->
                        <StackPanel>
                            <TextBlock Text="Mental Stats:" Style="{StaticResource StandardStatHeadderTextBlock}"/>
                            <Grid Width="250" Height="auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>
                                <!--IconLayout-->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto" Height="110">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline05}"/>
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline06}"/>
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline03}"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto" Height="110">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline07}" />
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline08}" />
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline04}"/>
                                    </Canvas>
                                </StackPanel>
                                <!--END Icon Layout-->
                                <!--Pool-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource PoolStackPannel}">
                                    <TextBlock Text="Mental&#x0a;Pool" Style="{StaticResource PoolNameTextBlock}" />
                                    <muxc:NumberBox Tag="MentalPool" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.MentalPool, Mode=OneWay}" Style="{StaticResource PoolNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Pool-->
                                <!--Super Stat 01-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Mind:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Mind" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Mind, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 01-->
                                <!--Sub Stat 01-->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepIntellect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Intellect:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusIntellect, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Intellect" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Intellect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 01-->
                                <!--Sub Stat 02-->
                                <StackPanel Grid.Column="0" Grid.Row="1 " Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepWisdom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Wisdom:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusWisdom, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Wisdom" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Wisdom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 02-->
                                <!--Super Stat 02-->
                                <StackPanel Grid.Column="1" Grid.Row="2" Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Will:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Will" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Will, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 02-->
                                <!--Sub Stat 01-->
                                <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepInstinct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Reaction:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusReaction, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Reaction" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Reaction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 01-->
                                <!--Sub Stat 02-->
                                <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepDiscipline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Discipline:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusDiscipline, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Discipline" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Discipline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Sub Stat 02-->
                            </Grid>
                        </StackPanel>
                        <!--END Mental Grid-->
                        <!--Magic Grid-->
                        <StackPanel>
                            <TextBlock Text="Meta Stats:" Style="{StaticResource StandardStatHeadderTextBlock}"/>
                            <Grid Width="250" Height="auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>
                                <!--IconLayout-->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto" Height="110">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline09}"/>
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline10}"/>
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline05}"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                    <Canvas Width="Auto" Height="110">
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline11}" />
                                        <Polyline Style="{StaticResource SubStatToSupStatPolyline12}" />
                                        <Polyline Style="{StaticResource SupStatToPoolStatPolyline06}"/>
                                    </Canvas>
                                </StackPanel>
                                <!--END Icon Layout-->
                                <!--Pool-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource PoolStackPannel}">
                                    <TextBlock Text="Meta&#x0a;Pool" Style="{StaticResource PoolNameTextBlock}" />
                                    <muxc:NumberBox Tag="MetaPool" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.MetaPool, Mode=OneWay}" Style="{StaticResource PoolNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Pool-->
                                <!--Super Stat 01-->
                                <StackPanel Grid.Column="1" Grid.Row="0" Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Power:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Power" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Power, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 01-->
                                <!--Force-->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepForce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Force:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusForce, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Force" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Force, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Force-->
                                <!--Channeling-->
                                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepChanneling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Channeling:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusChanneling, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Channeling" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Channeling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Channeling-->
                                <!--Super Stat 02-->
                                <StackPanel Grid.Column="1" Grid.Row="2" Style="{StaticResource SupStatStackPannel}">
                                    <TextBlock Text="Control:" Style="{StaticResource SupStatNameTextBlock}"></TextBlock>
                                    <muxc:NumberBox Tag="Control" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Control, Mode=OneWay}" Style="{StaticResource SuperStatNumberBox}"></muxc:NumberBox>
                                </StackPanel>
                                <!--END Super Stat 02-->
                                <!--Manipulation-->
                                <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Style="{StaticResource SubStatBlockStackPannel}">
                                    <StackPanel>
                                        <Slider Value="{x:Bind Path=SelectedCharacter.CurentCharacter.StepStats.StepManipulation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatSlider}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Manipulation:" Style="{StaticResource SubStatHeaderTextBlock}"></TextBlock>
                                            <muxc:NumberBox Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.BonusManipulation, Mode=OneWay}" Style="{StaticResource StatBonusNumberBox}"/>
                                        </StackPanel>
                                        <muxc:NumberBox Tag="Manipulation" ValueChanged="AttributeValue_NumberBox_ValueChanged" Value="{x:Bind Path=SelectedCharacter.CurentCharacter.Attributes.Manipulation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SubStatNumberBox}"></muxc:NumberBox>
                                    </StackPanel>
                                </StackPanel>
                                <!--END Manipulation-->
                                <!--Reserve-->
